<?xml version="1.0" encoding="UTF-8"?>
<effect name="ColorEffect">
  <technique type="forward" min_version="GL2">
    <pass>
      <render_states>
        <depth_test>true</depth_test>
        <depth_function>LESS</depth_function>
        <alpha_blending>false</alpha_blending>
      </render_states>
      
      <attributes>
        <position/>
      </attributes>
      
      <uniforms>
        <special_color/>
      </uniforms>
      
      <results>
        <color/>
      </results>
      
      <vertex_shader>
        <resource>simple</resource>
      </vertex_shader>
      <fragment_shader>
        <resource>color</resource>
      </fragment_shader>
    
    </pass>
  </technique>
</effect>